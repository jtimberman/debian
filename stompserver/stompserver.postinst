#! /bin/sh

case "$1" in
  install|upgrade)
    /usr/sbin/adduser --system \
      --group \
      --home /var/lib/stompserver
      --gecos "Stomp Server"
      stompserver > /dev/null
  ;;

  abort-upgrade)
  ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
  ;;

esac

#DEBHELPER#

exit 0
